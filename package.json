{
	"name": "vtl-documentation",
	"description": "VTL documentation proposal",
	"version": "0.1.0",
	"license": "MIT",
	"engines": {
		"node": ">=16.14",
		"npm": ">=8.0.0"
	},
	"scripts": {
		"build-pdf": "node ./pdf-builder/index.js",
		"docusaurus": "docusaurus",
		"start": "yarn build-pdf && docusaurus start",
		"start-fr": "yarn build-pdf && docusaurus start --locale fr",
		"build": "yarn build-pdf && docusaurus build",
		"swizzle": "docusaurus swizzle",
		"deploy": "docusaurus deploy",
		"postinstall": "yarn write-translations",
		"format": "prettier --loglevel warn --write \"src/**/*.{js,ts,jsx,tsx}\" \"docs/**/*.{md,mdx}\"",
		"format:docs": "prettier --loglevel warn --write \"docs/**/*.{md,mdx}\"",
		"format:i18n": "prettier --loglevel warn --write \"i18n/**/*.{md,mdx,json}\"",
		"lint:fix": "eslint \"src/**/*.{js,jsx,ts,tsx}\" --parser-options=project:tsconfig.json --fix",
		"lint": "eslint \"src/**/*.{js,jsx,ts,tsx}\" --parser-options=project:tsconfig.json",
		"clear": "docusaurus clear",
		"serve": "docusaurus serve",
		"build-serve": "yarn build && yarn serve",
		"write-translations": "yarn write-translations-en & yarn write-translations-fr & yarn format:docs & yarn format:i18n",
		"write-translations-en": "docusaurus write-translations --locale en",
		"write-translations-fr": "docusaurus write-translations --locale fr"
	},
	"dependencies": {
		"@abrookins-redis/redis-sitesearch-frontend": "^1.0.2",
		"@docusaurus/core": "2.4.3",
		"@docusaurus/plugin-content-pages": "2.4.3",
		"@docusaurus/plugin-sitemap": "2.4.3",
		"@docusaurus/preset-classic": "2.4.3",
		"@docusaurus/theme-search-algolia": "2.4.3",
		"@mdx-js/react": "^1.6.22",
		"antlr4ts": "^0.5.0-alpha.4",
		"clsx": "^1.2.1",
		"docusaurus-lunr-search": "^3.0.0",
		"docusaurus-plugin-sass": "^0.2.2",
		"monaco-editor": "^0.24.0",
		"prism-react-renderer": "^1.3.5",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-monaco-editor": "^0.43.0",
		"react-player": "^2.11.0",
		"react-scroll": "^1.8.8",
		"react-slick": "^0.29.0",
		"sass": "^1.58.0",
		"typed.js": "^2.0.12",
		"vtl-2-0-antlr-tools-ts": "^0.1.6"
	},
	"devDependencies": {
		"@docusaurus/module-type-aliases": "2.4.3",
		"@tsconfig/docusaurus": "^2.0.1",
		"@types/react-slick": "^0.23.10",
		"@typescript-eslint/eslint-plugin": "^6.7.3",
		"@typescript-eslint/parser": "^6.7.3",
		"docusaurus-node-polyfills": "^1.0.0",
		"duplexer": "^0.1.2",
		"eslint": "^8.33.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-prettier": "^5.0.0",
		"eslint-plugin-simple-import-sort": "^10.0.0",
		"file-loader": "^6.2.0",
		"markdown-pdf": "^11.0.0",
		"monaco-editor-webpack-plugin": "^1.8.2",
		"prettier": "^3.0.3",
		"prettier-linter-helpers": "^1.0.0",
		"remarkable-classy": "^0.0.1",
		"split": "^1.0.1",
		"through": "^2.3.8",
		"typescript": "^5.2.2"
	},
	"browserslist": {
		"production": [
			">0.5%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	}
}
